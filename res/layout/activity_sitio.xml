<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.guiaturi.Sitio" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_x="3dp"
        android:layout_y="-1dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:scaleType="fitXY"
            android:src="@drawable/cabecera2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_weight="0"
            android:scaleType="fitXY"
            android:src="@drawable/linea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_weight="0.34"
                android:background="#58ACFA"
                android:text="Inicio"
                android:textColor="#FFFFFF"
                android:textColorHint="#58ACFA"
                android:textSize="14sp" 
                android:onClick="inicio"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_weight="0.27"
                android:background="#58ACFA"
                android:onClick="turismo"
                android:text="Sitios Turisticos"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.48"
                android:background="#58ACFA"
                android:text="Contacto"
                android:onClick="contacto"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Cooper Black"
            android:gravity="center_horizontal|bottom"
            android:shadowRadius="1.2"
            android:text="COTOPAXI Y SUS ATRACTIVOS "
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="154dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="154dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="turismo1"
                    android:src="@drawable/turistico" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center_horizontal"
                    android:text="LUGARES TURÃ­STICOS DE COTOPAXI"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="152dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/cultura" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="CULTURA DE COTOPAXI"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="3.20"
                android:layout_gravity="center"
                android:src="@drawable/tradicion" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="129dp"
        android:layout_height="44dp"
        android:layout_weight="2.92"
        android:layout_x="86dp"
        android:layout_y="460dp"
        android:gravity="center_horizontal"
        android:text="TRADICIONES DE COTOPAXI"
        android:textStyle="bold" />

</AbsoluteLayout>
