<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.guiaturi.Turismo" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="136dp"
            android:layout_weight="0"
            android:scaleType="fitXY"
            android:src="@drawable/bannerc"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_weight="0"
            android:scaleType="fitXY"
            android:src="@drawable/linea" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.34"
                android:background="#58ACFA"
                android:text="Inicio"
                android:textColor="#FFFFFF"
                android:textColorHint="#58ACFA"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_weight="0.27"
                android:background="#58ACFA"
                android:onClick="sitio"
                android:text="Sitios Turisticos"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.48"
                android:background="#58ACFA"
                android:text="Contacto"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

</LinearLayout>

</AbsoluteLayout>
