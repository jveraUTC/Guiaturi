<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.guiaturi.MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="-1dp"
        android:layout_y="130dp" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.34"
            android:background="#58ACFA"
            android:text="Inicio"
            android:textColor="#FFFFFF"
            android:textColorHint="#58ACFA"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_weight="0.27"
            android:background="#58ACFA"
            android:onClick="sitio"
            android:text="Sitios Turisticos"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.48"
            android:background="#58ACFA"
            android:text="Contacto"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="153dp"
        android:layout_x="9dp"
        android:layout_y="193dp"
        android:src="@drawable/mamanegra" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="142dp"
        android:layout_x="10dp"
        android:layout_y="314dp"
        android:src="@drawable/laguna" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="163dp"
        android:layout_y="190dp"
        android:src="@drawable/lagunac" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="172dp"
        android:layout_height="110dp"
        android:layout_x="148dp"
        android:layout_y="325dp"
        android:src="@drawable/trenc" />

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_x="-2dp"
        android:layout_y="162dp" >
    </ExpandableListView>

</AbsoluteLayout>