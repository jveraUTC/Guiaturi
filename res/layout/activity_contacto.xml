<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
 android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:padding="0dp"
    tools:context="com.example.guiaturi.Contacto" >
<LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="-1dp"
        android:layout_y="130dp" >

        <Button
            android:id="@+id/inicio"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.34"
            android:background="#58ACFA"
            android:onClick="inicio"
            android:text="Inicio"
            android:textColor="#FFFFFF"
            android:textColorHint="#58ACFA"
            android:textSize="14sp" />

        <Button
            android:id="@+id/sitiost"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_weight="0.27"
            android:background="#58ACFA"
            android:onClick="sitio"
            android:text="Sitios Turisticos"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/contacto"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.48"
            android:background="#58ACFA"
            android:onClick="contacto"
            android:text="Contacto"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="223dp"
        android:layout_height="34dp"
        android:layout_x="34dp"
        android:layout_y="182dp" >

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contactanos"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_x="12dp"
        android:layout_y="409dp" >

    </LinearLayout>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="86dp"
        android:layout_y="418dp"
        android:text="0987666567- 032888777"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="58dp"
        android:layout_y="384dp"
        android:text="Guiaturiscotopaxi@gmail.com"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="132dp"
        android:layout_height="69dp"
        android:layout_x="89dp"
        android:layout_y="302dp"
        android:src="@drawable/gadcotopaxi" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_x="10dp"
        android:layout_y="232dp"
        android:src="@drawable/facebook" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="244dp"
        android:layout_y="223dp"
        android:src="@drawable/youtube" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_x="170dp"
        android:layout_y="227dp"
        android:src="@drawable/gmail" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_x="92dp"
        android:layout_y="232dp"
        android:src="@drawable/twiter" />
    
</AbsoluteLayout>
